<section class="pv-home-landing" role="region" aria-label="Peak Vitality Homepage">

  <style>
    :root {
      --pv-navy: #000080;
      --pv-deep: #000033;
      --pv-gold: #EFBF04;
      --pv-white: #ffffff;
      --pv-muted: #f7f7f7;
      --pv-h1: 3rem;
      --pv-h2: 2.25rem;
      --pv-h3: 1.5rem;
      --pv-p: 1.1rem;
    }

    .pv-home-landing {
      font-family: 'Montserrat', sans-serif;
      color: var(--pv-deep);
    }

    .pv-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    /* BUTTONS */
    a.pv-btn {
      display: inline-block;
      text-decoration: none;
      font-weight: 700;
      border-radius: 50px;
      transition: transform .2s ease, box-shadow .2s ease, background .2s ease;
    }
    .pv-btn--primary {
      background: var(--pv-gold);
      color: #000;
      padding: 1rem 2rem;
      box-shadow: 0 4px 10px rgba(0,0,0,0.25);
    }
    .pv-btn--primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 14px rgba(0,0,0,0.35);
      background: #ffd500;
    }
    .pv-btn--secondary {
      background: var(--pv-navy);
      color: #fff;
      padding: .5rem 1.5rem;
    }

    /* FRAMED HERO IMAGE */
    .pv-art-installation img {
      width: 4472px;
      max-width: 100%;
      display: block;
      margin: 0 auto;
    }

    /* PLAQUE */
    .pv-art-plaque-container {
      display: flex;
      justify-content: center;
      margin-top: -3rem;
      margin-bottom: 3rem;
    }
    .pv-art-plaque {
      width: 260px;
    }

    /* HERO */
    .pv-hero {
      position: relative;
      height: 85vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: var(--pv-white);
      background: url('https://cdn.shopify.com/s/files/1/0670/7180/3574/files/final_spiral_staircase_hero_reupload.png?v=1745757805')
        center/cover no-repeat;
    }
    .pv-hero__inner {
      opacity: 0;
      transform: translateY(30px);
      animation: pvFadeUp 1.2s ease forwards .3s;
    }
    .pv-hero h1 {
      font-size: var(--pv-h1);
      font-weight: 700;
      text-shadow: 0 3px 8px rgba(0,0,0,0.7);
    }

    /* ICONS */
    .pv-icons {
      display: flex;
      justify-content: space-between;
      max-width: 900px;
      margin: 3rem auto;
      padding: 0 2rem;
    }

    .pv-icon {
      text-align: center;
      min-width: 140px;
    }
    .pv-icon img {
      width: 60px;
      margin-bottom: .5rem;
    }

    /* PEAK DIFFERENCE */
    .pv-three {
      display: flex;
      justify-content: center;
      gap: 3.5rem;
      flex-wrap: wrap;
      margin-top: 1.5rem;
    }
    .pv-three__col {
      flex: 1;
      min-width: 250px;
      max-width: 320px;
      opacity: 0;
      transform: translateY(40px);
      transition: all .8s ease;
      text-align: center;
    }
    .pv-three__col.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .pv-three__col img {
      width: 240px;
      border-radius: 1rem;
      box-shadow: 0 6px 16px rgba(0,0,0,0.1);
      margin-bottom: 1rem;
    }

    /* CAROUSEL */
    .pv-carousel {
      display: flex;
      overflow-x: auto;
      gap: 2rem;
      padding: 2rem 0;
      scroll-behavior: smooth;
    }

    /* ANIMATION */
    @keyframes pvFadeUp {
      from { opacity: 0; transform: translateY(30px); }
      to   { opacity: 1; transform: translateY(0); }
    }
  </style>

