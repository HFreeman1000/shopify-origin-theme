{% comment %}
  Peak Vitality — Homepage (Cinematic Edition)
  - Hero: Looping Staircase MP4 w/ Crest Sound Toggle
  - Peak Difference: Hover-activated MP4 thumbnails
{% endcomment %}

<section class="pv-home-landing" role="region" aria-label="Peak Vitality Homepage">

  <style>
    :root {
      --pv-navy: #000080;
      --pv-deep: #000033;
      --pv-gold: #EFBF04;
      --pv-white: #ffffff;
      --pv-muted: #f7f7f7;
      --pv-h1: 3rem;
      --pv-h2: 2.25rem;
      --pv-h3: 1.5rem;
      --pv-p: 1.1rem;
    }

    .pv-home-landing {
      font-family: 'Montserrat', sans-serif;
      color: var(--pv-deep);
      background-color: #fff;
    }

    a.pv-btn {
      display: inline-block;
      text-decoration: none;
      font-weight: 700;
      border-radius: 50px;
      transition: transform .2s ease, box-shadow .2s ease, background .2s ease;
    }
    .pv-btn--primary {
      background: var(--pv-gold);
      color: #000;
      padding: 1rem 2rem;
      box-shadow: 0 4px 10px rgba(0,0,0,0.25);
    }
    .pv-btn--primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 14px rgba(0,0,0,0.35);
      background: #ffd500;
    }
    .pv-btn--secondary {
      background: var(--pv-navy);
      color: #fff;
      padding: .5rem 1.5rem;
    }

    /* ---------- Hero Video ---------- */
    .pv-hero {
      position: relative;
      width: 100%;
      height: 90vh;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: var(--pv-white);
    }
    .pv-hero video {
      position: absolute;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 1;
    }
    .pv-hero__inner {
      position: relative;
      z-index: 2;
      opacity: 0;
      transform: translateY(30px);
      animation: pvFadeUp 1.2s ease forwards .3s;
      padding: 0 1rem;
    }
    .pv-hero h1 {
      font-size: var(--pv-h1);
      font-weight: 700;
      text-shadow: 0 3px 8px rgba(0,0,0,0.7);
      margin-bottom: 1rem;
    }
    .pv-hero p {
      font-size: 1.5rem;
      font-weight: 500;
      color: #f9f9f9;
      text-shadow: 0 2px 6px rgba(0,0,0,0.75);
      margin-bottom: 1.5rem;
    }

    /* ---------- Crest Sound Toggle ---------- */
    #pv-sound-toggle {
      position: absolute;
      bottom: 1.5rem;
      right: 1.5rem;
      width: 60px;
      height: 60px;
      z-index: 3;
      cursor: pointer;
      transition: transform .3s ease;
    }
    #pv-sound-toggle.active {
      animation: crestPulse 2s infinite ease-in-out;
    }
    @keyframes crestPulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.08); }
    }

    /* ---------- Plaque ---------- */
    .pv-art-installation {
      width: 100%;
      overflow-x: hidden;
      margin-bottom: -2rem;
    }
    .pv-art-framed-image {
      width: 4472px;
      max-width: 100%;
      display: block;
      margin: 0 auto;
      height: auto;
    }
    .pv-art-plaque-container {
      display: flex;
      justify-content: center;
      margin-top: -3rem;
      margin-bottom: 3rem;
    }
    .pv-art-plaque {
      width: 260px;
      max-width: 90%;
      height: auto;
    }

    /* ---------- Peak Difference Section ---------- */
    .pv-difference {
      text-align: center;
      padding: 4rem 2rem 2rem;
    }
    .pv-difference h2 {
      font-size: var(--pv-h2);
      margin-bottom: 1rem;
      font-weight: 700;
    }
    .pv-three {
      display: flex;
      gap: 2rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 1.5rem;
    }
    .pv-three__col {
      flex: 1;
      min-width: 250px;
      max-width: 320px;
      opacity: 0;
      transform: translateY(40px);
      transition: all .8s ease;
    }
    .pv-three__col.visible {
      opacity: 1;
      transform: translateY(0);
    }
    .pv-three__col video {
      width: 240px;
      max-width: 100%;
      border-radius: 1rem;
      box-shadow: 0 6px 16px rgba(0,0,0,0.1);
      margin-bottom: 1rem;
      display: block;
    }

    @keyframes pvFadeUp {
      from { opacity: 0; transform: translateY(30px); }
      to   { opacity: 1; transform: translateY(0); }
    }
  </style>

  <!-- Framed Hero -->
  <div class="pv-art-installation">
    <img class="pv-art-framed-image"
         src="https://cdn.shopify.com/s/files/1/0670/7180/3574/files/Path_Of_The_Sovereign_5.png?v=1750165003"
         alt="Homepage Framed Hero">
  </div>

  <!-- Plaque -->
  <div class="pv-art-plaque-container">
    <img class="pv-art-plaque"
         src="https://cdn.shopify.com/s/files/1/0670/7180/3574/files/Path_of_the_Sovereign_Plaque_1.png?v=1748915453"
         alt="Homepage Plaque">
  </div>

  <!-- Hero Section -->
  <section class="pv-hero">
    <video id="pv-hero-video" autoplay loop muted playsinline preload="auto">
      <source src="YOUR_STAIRCASE_VIDEO_URL_HERE.mp4" type="video/mp4">
    </video>
    <div class="pv-hero__inner">
      <h1>Fuel Your Vitality. Earn Bitcoin.</h1>
      <p>Discover premium health supplements that reward your journey.</p>
      <a class="pv-btn pv-btn--primary" href="/collections/all">Shop Now</a>
    </div>
    <img id="pv-sound-toggle" src="YOUR_CREST_IMAGE_URL_HERE.png" alt="Toggle Sound">
  </section>

  <!-- Peak Difference -->
  <section class="pv-difference">
    <h2>The Peak Difference</h2>
    <div class="pv-three">
      <div class="pv-three__col">
        <video class="pv-diff-video" poster="THUMBNAIL_URL_1.jpg" muted preload="metadata">
          <source src="VIDEO_URL_1.mp4" type="video/mp4">
        </video>
        <h3>Health Optimization</h3>
        <p>Scientifically crafted supplements that fuel vitality from within.</p>
      </div>
      <div class="pv-three__col">
        <video class="pv-diff-video" poster="THUMBNAIL_URL_2.jpg" muted preload="metadata">
          <source src="VIDEO_URL_2.mp4" type="video/mp4">
        </video>
        <h3>Wealth Empowerment</h3>
        <p>Earn Bitcoin rewards with every purchase — real value, real growth.</p>
      </div>
      <div class="pv-three__col">
        <video class="pv-diff-video" poster="THUMBNAIL_URL_3.jpg" muted preload="metadata">
          <source src="VIDEO_URL_3.mp4" type="video/mp4">
        </video>
        <h3>Innovative Wellness</h3>
        <p>Next-gen formulas inspired by nature, backed by cutting-edge science.</p>
      </div>
    </div>
  </section>

  <script>
    /* --- Crest Sound Toggle --- */
    const heroVideo = document.getElementById('pv-hero-video');
    const soundToggle = document.getElementById('pv-sound-toggle');
    soundToggle.addEventListener('click', () => {
      heroVideo.muted = !heroVideo.muted;
      soundToggle.classList.toggle('active', !heroVideo.muted);
    });

    /* --- Hover-to-Play Peak Difference Videos --- */
    document.querySelectorAll('.pv-diff-video').forEach(video => {
      video.addEventListener('mouseenter', () => { video.play(); });
      video.addEventListener('mouseleave', () => { video.pause(); video.currentTime = 0; });
    });

    /* --- Fade-in Animation --- */
    const cols = document.querySelectorAll('.pv-three__col');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) entry.target.classList.add('visible');
      });
    }, { threshold: 0.2 });
    cols.forEach(c => observer.observe(c));
  </script>

</section>

