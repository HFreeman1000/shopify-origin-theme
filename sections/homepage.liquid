<script>
document.addEventListener("DOMContentLoaded", () => {
  
  /* ---- Bitcoin ticker ---- */
  const tickerEl = document.getElementById("btcTicker");

  fetch("https://peak-vitality.onrender.com/api/bitcoin-ticker")
    .then(r => r.json())
    .then(data => {
      tickerEl.textContent = 
        `1 BTC = $${data.btc.toLocaleString()} | 1 SAT â‰ˆ $${data.sat}`;
    })
    .catch(() => {
      tickerEl.textContent = "Live BTC price temporarily unavailable";
    });

  /* ---- Hero Sound Toggle ---- */
  const video = document.getElementById("pvHeroVideo");
  const btn = document.getElementById("pvSoundToggle");

  btn.addEventListener("click", () => {
    if (video.muted) {
      video.muted = false;
      btn.textContent = "ðŸ”Š";
    } else {
      video.muted = true;
      btn.textContent = "ðŸ”‡";
    }
  });

  /* ---- Peak Difference Hover Videos ---- */
  document.querySelectorAll(".pv-hover-container").forEach(container => {
    const img = container.querySelector(".pv-static-img");
    const vid = container.querySelector(".pv-hover-video");

    container.addEventListener("mouseenter", () => { vid.style.opacity = "1"; vid.play(); });
    container.addEventListener("mouseleave", () => { vid.style.opacity = "0"; vid.pause(); });
  });

});
</script>

