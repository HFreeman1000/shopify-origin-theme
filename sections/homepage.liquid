<section class="pv-home-landing" role="region" aria-label="Peak Vitality Homepage">

  <style>
    /* ---------- Core Tokens ---------- */
    :root {
      --pv-navy: #000080;
      --pv-deep: #000033;
      --pv-gold: #EFBF04;
      --pv-white: #ffffff;
      --pv-muted: #f7f7f7;
      --pv-h1: 3rem;
      --pv-h2: 2.25rem;
      --pv-h3: 1.5rem;
      --pv-p: 1.1rem;
    }

    .pv-home-landing {
      font-family: 'Montserrat', sans-serif;
      color: var(--pv-deep);
      background-color: #fff;
    }

    .pv-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    a.pv-btn {
      display: inline-block;
      text-decoration: none;
      font-weight: 700;
      border-radius: 50px;
      transition: transform .2s ease, box-shadow .2s ease, background .2s ease;
    }
    .pv-btn--primary {
      background: var(--pv-gold);
      color: #000;
      padding: 1rem 2rem;
      box-shadow: 0 4px 10px rgba(0,0,0,0.25);
    }
    .pv-btn--primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 14px rgba(0,0,0,0.35);
      background: #ffd500;
    }
    .pv-btn--secondary {
      background: var(--pv-navy);
      color: #fff;
      padding: .5rem 1.5rem;
    }

    /* ---------- Framed Hero + Plaque ---------- */
    .pv-art-installation {
      width: 100%;
      overflow-x: hidden;
      margin-bottom: -2rem;
    }
    .pv-art-framed-image {
      width: 4472px;
      max-width: 100%;
      display: block;
      margin: 0 auto;
      height: auto;
    }
    .pv-art-plaque-container {
      display: flex;
      justify-content: center;
      margin-top: -3rem;
      margin-bottom: 3rem;
    }
    .pv-art-plaque {
      width: 260px;
      max-width: 90%;
      height: auto;
      z-index: 3;
    }

    /* ---------- Hero Video ---------- */
    .pv-hero {
      position: relative;
      min-height: 90vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      color: var(--pv-white);
      margin-top: 2rem;
      overflow: hidden;
    }
    .pv-hero video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 1;
    }
    .pv-hero__inner {
      position: relative;
      z-index: 2;
      opacity: 0;
      transform: translateY(30px);
      animation: pvFadeUp 1.2s ease forwards .3s;
      padding: 0 1rem;
    }
    .pv-hero h1 {
      font-size: var(--pv-h1);
      font-weight: 700;
      text-shadow: 0 3px 8px rgba(0,0,0,0.7);
      margin: 0 0 1rem 0;
    }
    .pv-hero p {
      font-size: 1.5rem;
      font-weight: 500;
      color: #f9f9f9;
      text-shadow: 0 2px 6px rgba(0,0,0,0.75);
      margin: 0 0 1.5rem 0;
    }

    /* ---------- Crest Sound Toggle ---------- */
    #pv-sound-toggle {
      position: absolute;
      bottom: 1.5rem;
      right: 1.5rem;
      width: 75px;
      height: 75px;
      z-index: 3;
      cursor: pointer;
      transition: transform .3s ease;
    }
    #pv-sound-toggle.active {
      animation: crestPulse 2s infinite ease-in-out;
    }
    @keyframes crestPulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.08); }
    }

    /* ---------- Credibility Row ---------- */
    .pv-icons {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 2rem;
      flex-wrap: wrap;
    }
    .pv-icon {
      text-align: center;
      min-width: 140px;
    }
    .pv-icon img {
      width: 60px;
      height: auto;
      display: block;
      margin: 0 auto .5rem auto;
    }

    /* ---------- Peak Difference ---------- */
    .pv-difference {
      text-align: center;
      padding: 4rem 2rem 2rem;
    }
    .pv-difference h2 {
      font-size: var(--pv-h2);
      margin-bottom: 1rem;
      font-weight: 700;
    }
    .pv-three {
      display: flex;
      gap: 2rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 1.5rem;
    }
    .pv-three__col {
      flex: 1;
      min-width: 250px;
      max-width: 320px;
      opacity: 0;
      transform: translateY(40px);
      transition: all .8s ease;
      text-align: center;
    }
    .pv-three__col.visible {
      opacity: 1;
      transform: translateY(0);
    }
    .pv-three__col video {
      width: 240px;
      max-width: 100%;
      border-radius: 1rem;
      box-shadow: 0 6px 16px rgba(0,0,0,0.1);
      margin-bottom: 1rem;
      display: block;
    }

    /* ---------- Featured Products ---------- */
    .pv-featured {
      padding: 2rem 2rem 0;
    }
    .pv-featured h2 {
      text-align: center;
      font-size: var(--pv-h2);
      margin-bottom: 1rem;
      font-weight: 700;
    }
    .pv-carousel {
      display: flex;
      overflow-x: auto;
      gap: 2rem;
      padding: 2rem 0;
      scroll-behavior: smooth;
    }
    .pv-card {
      flex: 0 0 250px;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      text-align: center;
      padding: 1rem;
    }
    .pv-card img {
      width: 100%;
      border-radius: 1rem;
      display: block;
    }

    .pv-centered {
      text-align: center;
      padding: 4rem 2rem;
    }

    .pv-crest img {
      width: 150px;
      height: auto;
      display: block;
      margin: 0 auto 1rem auto;
    }

    @keyframes pvFadeUp {
      from { opacity: 0; transform: translateY(30px); }
      to   { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 768px) {
      :root { --pv-h1: 2.25rem; --pv-h2: 1.75rem; --pv-h3: 1.25rem; --pv-p: 1rem; }
      .pv-container { padding: 1.25rem; }
    }
  </style>

