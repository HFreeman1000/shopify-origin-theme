{% comment %}
  DESCRIPTION:
  Master layout file for Peak Vitality custom Shopify theme.
  All page templates render inside this file.
{% endcomment %}
<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>
    {{ page_title }}
    {%- if current_tags -%} &ndash; tagged "{{ current_tags | join: ', ' }}"{%- endif -%}
    {%- if current_page != 1 -%} &ndash; Page {{ current_page }}{%- endif -%}
    {%- unless page_title contains shop.name -%} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  <link rel="canonical" href="{{ canonical_url }}" />
  {%- if settings.use_favicon and settings.favicon != blank -%}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/x-icon" />
  {%- endif -%}

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}" />
  {%- endif -%}

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  {% include 'open-graph-tags' %}
  {% include 'twitter-card' %}

  {{ content_for_header }}

  <!-- Load fonts and CSS -->
  {{ 'brand-custom-theme.min.css' | asset_url | stylesheet_tag }}
  {{ 'brand-custom-quickfix.scss.css' | asset_url | stylesheet_tag }}

  <!-- Core Scripts -->
  {{ '//ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js' | script_tag }}
  {{ 'js.cookie.min.js' | asset_url | script_tag }}
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}

  <!-- Polyfill -->
  <script>
    document.createElement('picture');
    document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
  </script>
  <script src="{{ 'picturefill.min.js' | asset_url }}" async></script>

  <!--[if lt IE 9]>
    {{ '//html5shiv.googlecode.com/svn/trunk/html5.js' | script_tag }}
  <![endif]-->
</head>

<body id="{{ page_title | handle }}"
      class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', '-' | replace: '/', '-' }}">

  {% comment %}
    Inject custom header/navigation here
  {% endcomment %}
  {% section 'custom-header' %}

  {{ content_for_layout }}

  <!--[if lt IE 8]>
    <p class="chromeframe">You are using an <strong>outdated</strong> browser.
      Please <a href="http://browsehappy.com/">upgrade</a> or
      <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a>.
    </p>
  <![endif]-->

  <!-- Footer Scripts -->
  {{ 'popper.min.js' | asset_url | script_tag }}
  {{ 'bootstrap.min.js' | asset_url | script_tag }}
  {{ 'picturefill.min.js' | asset_url | script_tag }}
  {{ 'ls.unveilhooks.min.js' | asset_url | script_tag }}
  {{ 'ls.bgset.min.js' | asset_url | script_tag }}
  {{ 'lazysizes.min.js' | asset_url | script_tag }}
  {{ 'brand-custom-theme.js' | asset_url | script_tag }}
</body>
</html>
